{
    "$schema": "http://json.schemastore.org/prettierrc",
    "plugins": ["prettier-plugin-pkg", "prettier-plugin-tailwindcss"],
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
}
